<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:alpha="0.75">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/color_black" >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="@string/app_name"
            android:padding="15dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/color_teal" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            android:tint="@color/color_teal"
            android:layout_marginEnd="90dp"
            android:padding="5dp"
            android:background="@null"
            android:layout_gravity="end" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_sort"
            android:tint="@color/color_teal"
            android:layout_marginEnd="45dp"
            android:padding="5dp"
            android:background="@null"
            android:layout_gravity="end" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_dots"
            android:tint="@color/color_teal"
            android:padding="5dp"
            android:background="@null"
            android:layout_gravity="end" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="65dp"
        android:longClickable="true"
        app:cardCornerRadius="5dp"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_teal"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:focusable="false"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:text="@string/welcome_note"
                    android:layout_marginEnd="50dp"
                    android:hint="@string/content_hint" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_expand"
                    android:background="@null"
                    android:layout_gravity="end|top" />
            </FrameLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:singleLine="true"
                android:focusable="false"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/click_note"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tint="@color/color_blue"
        android:layout_marginTop="125dp"
        android:visibility="gone"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_click" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/click_note_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="15dp"
        android:visibility="gone"
        android:gravity="start"
        android:text="@string/single_click_note_message"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:textColor="@color/color_blue" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/longclick_note"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tint="@color/color_red"
        android:layout_marginTop="125dp"
        android:rotation="-90"
        android:visibility="gone"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_click" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/longclick_note_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        android:gravity="end"
        android:text="@string/long_click_note_message"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:textColor="@color/color_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow"
            android:rotation="180"
            android:tint="@color/color_teal"
            android:layout_marginEnd="25dp"
            android:padding="5dp"
            android:background="@null" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="@string/skip"
            android:padding="15dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/color_teal" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/arrow_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow"
            android:tint="@color/color_teal"
            android:layout_marginStart="25dp"
            android:padding="5dp"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="80dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="10dp"
            android:text="1"
            android:padding="15dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorAccent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="2"
            android:padding="15dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorAccent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="100dp"
            android:text="3"
            android:padding="15dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorAccent" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/color_white"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="15dp" >

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/color_teal"
            android:src="@drawable/ic_add"
            android:layout_margin="10dp"
            android:background="@null"
            android:clickable="false" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/click_fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tint="@color/color_orange"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="45dp"
        android:src="@drawable/ic_click" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/click_fab_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="@string/bottom_fab_click_message"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:textColor="@color/color_orange" />
</RelativeLayout>